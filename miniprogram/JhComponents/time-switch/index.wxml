<view class="bg" style="height:{{height}}rpx;background:{{bgColor}};">
  <van-icon name="arrow-left" class="img" style="height:{{height}}rpx;"
    color='{{disabledPrev||text.length? "gray":(bgColor=="white"?"black":"white")}}' bind:click="clickPrevBtn"
    wx:if="{{!hiddenArrow}}" />
  <view class="time" style="color:{{bgColor=='white'?'black':'white'}};" bindtap="clickText">{{centerText}}</view>
  <van-icon name="arrow" class="img" style="height:{{height}}rpx;"
    color='{{disabledNext||text.length? "gray":(bgColor=="white"?"black":"white")}}' bind:click="clickNextBtn"
    wx:if="{{!hiddenArrow}}" />
</view>